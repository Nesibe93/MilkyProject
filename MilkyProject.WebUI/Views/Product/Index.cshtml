@model List<MilkyProject.WebUI.Dtos.ResultProductDto>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Eski fiyat</th>
            <th>Yeni fiyat</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.productId</td>
                <td>@item.productName</td>
                <td>@item.oldPrice</td>
                <td>@item.newPrice</td>
                <td>@item.status</td>
                <td><a href="/Product/DeleteProduct/@item.productId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.productId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-success">Yeni Ürün Girişi</a>
</div>